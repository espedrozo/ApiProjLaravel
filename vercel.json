{
  "version": 2,
  "builds": [
    { "src": "/public/**/*", "use": "@now/static" },
    { "src": "/index.html", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/resources/css/(.*)",
      "dest": "/resources/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
